    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            },
        },
    },
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mvn package",
            "problemMatcher": [],            
            "group": "build"
        },
        {
            "label": "Rodar View",
            "type": "shell",
            "command": "mvn exec:java -Dexec.args='-v' 2> /dev/null",
            "problemMatcher": []
        },
        {
            "label": "Rodar Control",
            "type": "shell",
            "command": "mvn exec:java -Dexec.args='-c' 2> /dev/null",
            "problemMatcher": []
        },
        {
            "label": "Rodar Model",
            "type": "shell",
            "command": "mvn exec:java -Dexec.args='-m' 2> /dev/null",
            "problemMatcher": []
        }
        
        
    ]
}